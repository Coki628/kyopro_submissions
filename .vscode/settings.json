{
    "python.linting.pylintEnabled": false,
    // for ubuntu
    "python.defaultInterpreterPath": "${env:HOME}/.local/share/virtualenvs/kyopro_submissions-sE58OA1B/bin/python",
    // "python.pythonPath": "${env:HOME}/.local/share/virtualenvs/kyopro-nR65H5la/bin/python",
    // for windows
    // "python.defaultInterpreterPath": "${env:HOMEPATH}\\.virtualenvs\\kyopro_submissions-LrqLoIn1\\Scripts\\python.exe",
    // "python.pythonPath": "${env:HOMEPATH}\\.virtualenvs\\kyopro_submissions-LrqLoIn1\\Scripts\\python.exe",
    // C++のフォーマッター設定
    // 参考：https://gist.github.com/9sako6/458def885387e8dcd2f0f2742a1dc3e4
    // 　　　https://yasuharu519.hatenablog.com/entry/2015/12/13/210825
    // 　　　https://clang.llvm.org/docs/ClangFormatStyleOptions.html
    // 注意点：elifマクロが正しく認識しないので使えなくなる。
    // 各設定について
    // BreakBeforeBraces: ブロック開始時括弧の改行なし
    // SortIncludes: #includeの順序ソートなし
    // AllowShortFunctionsOnASingleLine: 短い関数を1行に整形なし(repマクロもここに入る)
    // ReflowComments: コメント内改行なし
    // AccessModifierOffset: アクセス修飾子がデフォルトでインデントされるので戻す
    "C_Cpp.clang_format_style": "{ BreakBeforeBraces: Attach, IndentWidth: 4, SortIncludes: Never, AllowShortFunctionsOnASingleLine: None, ReflowComments: false, AccessModifierOffset: -4 }",
}
